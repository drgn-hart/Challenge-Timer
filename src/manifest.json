{
    "manifest_version": 2,

    "name": "Countdown Timer",
    "short_name": "Timer",
    "description": "Chrome extension that lets you set timer on any web page",

    "version": "1.0",
    "version_name": "1.0 beta",

    "browser_action" : {
        "default_title": "Challenge Timer",
        "default_popup": "popout/popout.html" 
    },

    "permissions": [
        "activeTab"
    ],

    "background": {
        "scripts": ["core/timer.js"],
        "persistent": false
    },

    "offline_enabled": true
}